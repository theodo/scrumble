{
  "name": "Project",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
      "promisify": true
  },
  "properties": {
    "boardId": {
      "type": "string",
      "required": true
    },
    "objectId": {
      "type": "string",
      "required": false
    },
    "name": {
      "type": "string",
      "required": true
    },
    "columnMapping": {
      "type": "object",
      "required": false
    },
    "settings": {
      "type": "object",
      "required": false
    },
    "team": {
      "type": "object",
      "required": false
    },
    "organizationId": {
      "type": "number",
      "required": false
    },
    "createdAt": {
      "type": "date",
      "required": false
    },
    "updatedAt": {
      "type": "date",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "sprints": {
      "type": "hasMany",
      "model": "Sprint",
      "foreignKey": "projectId"
    },
    "problems": {
      "type": "hasMany",
      "model": "Problem",
      "foreignKey": "projectId"
    },
    "dailyReport": {
      "type": "hasOne",
      "model": "DailyReport",
      "foreignKey": "projectId"
    },
    "organization": {
      "type": "belongsTo",
      "model": "Organization",
      "foreignKey": "organizationId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ]
}
